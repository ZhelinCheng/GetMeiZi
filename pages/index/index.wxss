/**index.wxss**/
.container {
  padding: 200rpx 0 0;
  height: 100vh;
  background-position: center top;
  background-repeat: no-repeat;
  background-size: 750rpx
}

.swiper {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, transparent 10%, #64696e 30%);
}

.swiper-item {
  overflow: visible;
}

.inner {
  position: relative;
  width: 684rpx;
  height: 600rpx;
  background: #fff;
  margin: 280rpx auto 0;
  border-radius: 50rpx;
}

.inner > image {
  position: absolute;
  top: -60rpx;
  left: 0;
  right: 0;
  display: block;
  margin: 0 auto;
  width: 260rpx;
  height: 364rpx;
  border-radius: 16rpx;
  box-shadow: 0 0 4px #ccc
}

.inner > view {
  display: block;
  padding-top: 350rpx;
  height: auto;
  width: auto;
}

.inner text {
  display: block;
  text-align: center;
  line-height: 1.5;
  color: #666666
}

.inner .text-title {
  font-weight: bold;
  color: #222222
}


.bg {
   position: absolute;
   z-index: 1;
   width: 100%;
   height: 410rpx;
   left: 0;
   top: 0;
}